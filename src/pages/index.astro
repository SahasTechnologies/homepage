---
import appScript from '../scripts/app.js?url';
import appStyles from '../scripts/styles.css?url';
---
<!-- whats different between this and html? -->
<html lang="en">
	<head>
		<meta charset="utf-8" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="viewport" content="width=device-width" />
		<meta name="generator" content={Astro.generator} />
		<link rel="preconnect" href="https://fonts.bunny.net" />
		<link
			href="https://fonts.bunny.net/css?family=red-hat-text:400,700&display=swap"
			rel="stylesheet"
		/>
		<title>Sahas Shimpi</title>
		<script>
			(function(){
				try {
					const stored = localStorage.getItem('theme');
					const prefers = window.matchMedia('(prefers-color-scheme: dark)').matches;
					const mode = (stored === 'light' || stored === 'dark') ? stored : (prefers ? 'dark' : 'light');
					document.documentElement.setAttribute('data-theme', mode);
				} catch (e) {}
			})();
		</script>
		<link rel="stylesheet" href={appStyles} />
	</head>
	<body>
		<button class="theme-toggle" aria-label="Toggle theme">
			<span class="icon-wrap icon-moon"><i data-lucide="moon"></i></span>
			<span class="icon-wrap icon-sun"><i data-lucide="sun"></i></span>
		</button>
		<div class="stack">
			<div class="header">
				<span class="avatar-ring">
					<span class="avatar-inner">
						<img src="/propic.png" alt="Sahas Shimpi" class="avatar" width="72" height="72" />
					</span>
				</span>
				<h1 class="name">Sahas Shimpi</h1>
			</div>
			<div class="actions">
				<a class="btn" href="#projects">Projects</a>
			</div>
		</div>
		<script type="module" src={appScript}></script>
	</body>
</html>
<!-- short and sweet astro just like a NORMAL HTML FiLE!!! -->